<div class="jumbotron">
  <div class="row">
    <div class="col-md-6">
      <h1>Ember v4.9.3</h1>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-sm-6 smallpad">
          <BsButton id="run" {{on "click" this.create}}>
            Create 1,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="runlots" {{on "click" this.runLots}}>
            Create 10,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="add" {{on "click" this.add}}>
            Append 1,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="update" {{on "click" this.update}}>
            Update every 10th row
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="clear" {{on "click" this.clear}}>
            Clear
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="swaprows" {{on "click" this.swapRows}}>
            Swap Rows
          </BsButton>
        </div>
      </div>
    </div>
  </div>
</div>

{{#if this.data.length}}
  <table class="table table-hover table-striped test-data" {{on "click" this.onClick}}>
    <tbody>
    {{#each this.data key="id" as |item|}}
      <tr class={{if (eq item.id this.selected) "danger"}} data-data_id={{item.id}}>
        {{!--<tr class={{if (eq item) "danger"}} data-data_id={{item.id}}>--}}
        <td class="col-md-1">{{item.id}}</td>
        <td class="col-md-4">
          <a class="lbl" data-data_id={{item.id}} {{!on "click" (fn this.select item)}}>
            {{item.label}}
          </a>
        </td>
        <td class="col-md-1">
          <a class="remove" {{!on "click" (fn this.remove item)}}>
              <span
                class="glyphicon glyphicon-remove"
                aria-hidden="true"
                data-data_id={{item.id}}
              ></span>
          </a>
        </td>
        <td class="col-md-6"></td>
      </tr>
    {{/each}}
    </tbody>
  </table>

{{!--
<FastEach class="table table-hover table-striped test-data" @items={{this.data}} as |item|>
  <TableRow class={{if (eq item) "danger"}} @item={{item}} @onSelect={{fn this.select item}} @onRemove={{fn this.remove item}} />
</FastEach>
--}}
{{/if}}

